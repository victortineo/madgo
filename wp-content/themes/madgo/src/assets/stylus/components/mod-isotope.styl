.isotope
	padding 50px 0
	background-color #2b2822
	color #fff
	.page-header
		padding-right 15px
		padding-left 15px
		h1
			font-weight 300
			color #fff
			font-size 36px
		h2
			font-weight 18px
			font-weight 300
			color #fff
		strong
			font-weight 300
			color $customred2
	.grid
		padding 20px 0 0
	.element-item
		position relative
		display inline-block
		width 100%
		min-height 200px
		max-height 200px
		background-color #f1f1f1
		margin-bottom 3px
		background-size cover
		background-position center
		background-repeat no-repeat
		@media screen and (min-width: 480px)
			width 50%
		@media screen and (min-width: 768px)
			width 33%
		a
			display block
			position absolute
			top 0
			right 0
			left 0
			bottom 0
			background-color alpha(#000, 20%)
			transition(.5s all ease-in-out)
			&:hover
				background-color transparent
				figcaption
					opacity 1
		figcaption
			position absolute
			bottom 15px
			left 15px
			right 15px
			opacity 0
			transition(.5s all ease-in-out)
			strong
				font-size 12px
				font-weight normal
				color #fff
				background-color #5c5c5c
				display inline-block
				padding 2px 10px
				margin-bottom 10px
				&:first-child
					font-size 14px
					text-transform uppercase
				&:last-child
					margin 0
	.button
		text-transform capitalize
		font-size 14px
		font-weight 300
		padding 2px 5px
		background-color $customred1
		border 0
		margin-bottom 2px
		color $customwhite1
		&:hover
			background-color #5c5c5c
		&-group
			padding 0 15px