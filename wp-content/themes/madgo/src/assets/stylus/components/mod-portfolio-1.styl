.owl-wrapper
  min-height 500px
  background-color #2b2822
.mod-portfolio-1
  background-color #2b2822
  overflow hidden
  zoom 1
  .header-section
    padding 25px 15px
    color $customwhite1
    text-align center
    h1
      font-size 36px
      font-weight 300
    h2
      font-size 18px
      font-weight 300
      span
        color #e94646
    strong
      font-size 12px
      font-weight 400
      cursor pointer
      padding 25px
      &:hover
        color #e94646
    .filter-owl
      padding-top 25px
  .owl-button
    vertical-middle(-50%)
    position absolute
    top 50%
    padding-left 15px
    color $customwhite1
    font-size 22px
    z-index 2
    cursor pointer
    opacity .3
    transition(.2s all ease-in)
    &:hover
      opacity 1
    &.next
      right 0
      padding-left 0
      padding-right 15px
    i
      border-radius 100%
      padding 2px 10px 3px 10px
      background-color $customblack1
  .owl-carousel
    .item,
    .design,
    .webdesign
      position relative
      overflow hidden
      min-height 250px
      background-position top center
      transition(.2s all ease-in)
      &:hover
        background-position top left
      .wrapper
        position absolute
        overflow hidden
        top 0
        bottom 0
        left 0
        right 0
        opacity 0
        -ms-transform: scale(1.3); /* IE 9 */
        -webkit-transform: scale(1.3); /* Safari */
        transform: scale(1.3); /* Standard syntax */
        transition(.2s all ease-in)
        &:hover
          -ms-transform: scale(1); /* IE 9 */
          -webkit-transform: scale(1); /* Safari */
          transform: scale(1); /* Standard syntax */
          background-color alpha(#2b2822, 90%)
          opacity 1
        .content
          position absolute
          vertical-middle(-50%)
          top 50%
          left 10px
          right 10px
          text-align center
          color $customwhite1
          h1
            padding 0 0 10px 0
            margin 0
            font-size 18px
            font-weight 700
            text-transform uppercase
            color $customwhite1
          p
            font-size 15px
            font-weight 300
            margin 0
            padding 0 0 10px 0
            strong
              display inline-block
              font-size 12px
              font-weight 300
              padding 0 0 30px 0
              margin 0
          a
            display inline-block
            background-color #dc0000
            font-size 13px
            font-weight 600
            color $customwhite1    
            padding 10px 25px
            &:hover
              background-color darken(#dc0000, 20%)
    .webdesign
      &:hover
        background-position top right
      .wrapper
        -ms-transform: scale(.6); /* IE 9 */
        -webkit-transform: scale(.6); /* Safari */
        transform: scale(.6); /* Standard syntax */
        &:hover
          background-color alpha(#dc0000, 85%)
        .content
          a
            background-color #2b2822
            &:hover
              background-color darken(#2b2822, 85%)
    &.removing
      .item
        -ms-transform: scale(0); /* IE 9 */
        -webkit-transform: scale(0); /* Safari */
        transform: scale(0); /* Standard syntax */
    .owl-controls
      display none
      