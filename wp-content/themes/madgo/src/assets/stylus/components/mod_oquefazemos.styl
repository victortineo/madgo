  background-color $customred2
  background-image url('.././img/o-que-fazemos.png')
  background-size cover
  background-repeat no-repeat
  background-position center center
  background-attachment fixed
  min-height 700px
  padding 80px 0
  @media mqmobile-md
    padding 25px 10px
    min-height 100%
  .page-header
    h1
      display inline-block
      color $customwhite1
      font-size 36px
      font-weight 100
      padding 0 5px
  p
    font-size 90px
    font-family 'Conv_CaeciliaLTStd-Light'
    color $customwhite1
