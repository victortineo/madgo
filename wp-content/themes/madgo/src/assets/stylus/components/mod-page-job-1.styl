.mod-page-job-1
	color alpha($customblack1, 60%)
	line-height 1.5
	&.webdesign
		padding-top 109px
		@media mqmobile-md
			padding-top 134px
	.navigation-cases
		position fixed
		top 78px
		left 0
		right 0
		background-color black
		z-index 10
		color $customwhite1
		background-color darken($customblack3, 40%)
		font-size 14px
		div
			padding 5px 15px
			&:first-child
				text-align right
				background-color darken($customblack3, 70%)
		strong
			font-weight 600
		span
			font-weight 300
		a
			font-weight 300
			color $customwhite1
			&:hover
				text-decoration none
			&:before
				content '| '
		@media mqmobile-md
			font-size 12px
			div
				text-align center
				&:first-child
					text-align center
	.fullpage
		margin 0
		padding 0
		background-color $customwhite1
		background-size cover
		background-position top center
		background-attachment fixed
		height 100vh
		min-height 300px
		max-height 800px
		
		&-webdesign
			margin 0
			padding 0
			background-color #e40329
			background-position right center
			background-repeat no-repeat
			background-size 50%
			height calc(100vh - 109px)
			min-height 300px
			max-height 800px
			@media mqmobile-md
				height 100%
				background-image none !important
				max-height 100%
			img
				margin-top 50px
			.content
				padding 50px 0
				clear both
				color $customwhite1
				p
					line-height 1.2
				h1
					font-size 35px
					font-weight 700
	.content
		padding 30px 5px
		@media mqdesktop
			padding 75px 0
		&-webdesign
			padding 50px 0
			background-color $customwhite1
			color $customblack3
			h1
				font-size 35px
	.wireframe-webdesign
		padding 70px 0
		background-color #f3eeee
		h1
			font-size 20px
	.site-webdesign
		padding 70px 0 0
		.container
			max-width 1170px
		.lista
			&-header
				background-color #e9e4e4
				padding 15px 10px
				text-align center
				strong
					font-size 15px
					font-weight 900
			ol
				background-color #eeeeee
				color $customblack3
				display block
				padding 25px 10px 25px 30px
			li
				font-size 14px
				font-weight 700
				padding-bottom 20px
				&:last-child
					padding 0
				span
					font-weight 400
	.tecnologias
		@media mqmobile-md
			padding 20px 10px
		.aside-title
			padding 20px
			background-color $customblack2
			h1
				margin 0
				color $customwhite1
		ul
			padding 20px 20px 0 20px
			@media mqmobile-md
				text-align center
		li
			padding-bottom 15px
			&:last-child
				padding-bottom 0
	p
		margin 0
		padding 10px 0
		line-height 1.4
		font-size 14px
	a
		font-weight 100
		color $customred1
		&:hover
			text-decoration underline
	h1
		font-size 15px
		margin-bottom 5px
	@media mqmobile-md
		p
			text-align justify
		h1
			text-align center
.controls-mod-job
	@media mqtablet
		display none
	.controls-left,
	.controls-right
		vertical-middle(-50%)
		position fixed
		top 50%
		left 0
		transition(.2s all ease-in)
		font-size 42px
		color $customblack1
		padding 15px
		background-color alpha($customwhite1, 45%)
		&:hover
			color $customwhite1
			background-color $customblack1
	.controls-right
		float right
		right 0
		left inherit